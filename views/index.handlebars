<div class="container">

  <div class="container search-bar">
    <div class="search-bar-outer">
      <div class="search-bar-inner">
        <form action="/restaurants/search">
          <h4 class="mb-2">Search for Restaurantsï¼š</h4>
          <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-2">

            <div class="input-group">
              <input type="text" name="keyword" class="form-control" placeholder="Names, Types of Restaurants"
                aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
            </div>
            <div class="input-group">
              <select class="form-select" id="sort" name="sort" value="{{sort}}">
                <option value="A > Z">A > Z</option>
                <option value="Z > A">Z > A</option>
                <option value="Category">Category</option>
                <option value="Location">Location</option>
              </select>
            </div>
            <div class="input-group-append" style="position: fixed; right: 10px; bottom: 10px;">
              <a href="/restaurants/new" class="btn btn-major"><i class="fas fa-file-circle-plus"></i></a>
            </div>

          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- restaurant list -->
  <div class="row mt-5" id="data-panel">
    {{#each restaurants}}
    <div class="col-sm-3">
      <a href="/restaurants/{{this._id}}" class="text-secondary">
        <div class="card mb-2">
          <img class="card-img-top" src="{{this.image}}"
            alt="{{this.name_en}}">
          <div class="card-body">
            <h6 class="card-title mb-1">{{this.name_en}}</h6>
      
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
            <span class="badge bg-danger fw-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
              <div class="d-flex align-items-center justify-content-around">
                <a class="d-flex mr-5" href="./restaurants/{{ this._id }}/edit" style="vertical-align: middle;">edit</a>
                <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST"
                  style="display: inline; margin: 0; padding: 0; vertical-align: middle;">
                  <button class="btn btn-link" type="submit" style="vertical-align: middle; margin: 0; padding: 0;">delete</button>
                </form>
              </div>
            </span>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>





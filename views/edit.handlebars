<h1 class="mb-1 restaurant-show-title">{{restaurants.name_en}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <form class="w-25 mx-auto d-flex flex-column align-items-start" action="/restaurants/{{ restaurants._id }}?_method=PUT" method="POST">
        <p class="w-100 mb-3 form-row">
          <span class="text-secondary mb-1 form-span">
            <i class="fas fa-passport pr-2"></i>
            Name：
          </span>
          <input class="w-100" type="text" placeholder="name
          _in_english" name="name_en" value="{{ restaurants.name_en }}" required>
        </p>

        <p class="w-100 mb-3 form-row">
          <span class="text-secondary mb-1 form-span">
            <i class="fas fa-utensils pr-2"></i>
            Category：
          </span>
          <input class="w-100" type="text" placeholder="category" name="category" value="{{ restaurants.category }}" required>
        </p>

        <p class="w-100 mb-3 form-row">
          <span class="text-secondary mb-1 form-span">
            <i class="fas fa-solid fa-image pr-2"></i>
            Image：
          </span>
          <input class="w-100" type="text" placeholder="URL of Image" name="image" value="{{ restaurants.image }}" required>
        </p>

        <p class="w-100 mb-3 form-row">
          <span class="text-secondary mb-1 form-span">
            <i class="fas fa-map-marker-alt pr-2"></i>
            Location：
          </span>
          <input class="w-100" type="text" placeholder="Address" name="location" value="{{ restaurants.location }}" required>
        </p>

        <p class="w-100 mb-3 form-row">
          <span class="text-secondary mb-1 form-span">
            <i class="fas fa-mobile-alt pr-2"></i>
            Phone：
          </span>
          <input class="w-100" type="text" placeholder="Phone Number" name="phone" value="{{ restaurants.phone }}">
        </p>

        <p class="w-100 mb-3 form-row">
          <span class="text-secondary mb-1 form-span">
            <i class="fas fa-map-location-dot pr-2"></i>
            Goole Map：
          </span>
          <input class="w-100" type="text" placeholder="URL of Google Map" name="google_map" value="{{ restaurants.google_map }}" required>
        </p>

        <p class="mb-3 form-row">
          <span class="text-secondary mb-1 form-span">
            <i class="fas fa-star pr-2"></i>
            Rating：
          </span>
          <input class="w-100" type="number" min="0" max="5" placeholder="5" step="0.1" name="rating" value="{{ restaurants.rating }}" style="text-align: center;" required>
        </p>

        <p class="w-100 mb-3 form-row">
          <span class="text-secondary mb-1 form-span">
            <i class="fas fa-pen pr-2"></i>
            Description：
          </span>
          <textarea placeholder="...write down some info" name="description" id="dexcription" cols="30" rows="4"
            style="resize:none;" required>{{ restaurants.description }}</textarea>
          {{!-- <input type="text" placeholder="description" name="description" required> --}}
        </p>
        <div class="w-100 d-flex justify-content-center">
          <button type="submit" class="btn btn-major mb-5">Save</button>
        </div>

        {{!-- <i class="fas fa-file-circle-plus"></i> --}}

      </form>
    </div>
  </div>
</div>